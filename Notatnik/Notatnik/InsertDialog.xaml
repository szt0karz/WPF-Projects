<Window x:Class="Notatnik.InsertDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatnik"
        mc:Ignorable="d"
        Title="InsertDialog" Height="200" Width="420">

    <!-- StackPanel do centrowania elementów w oknie -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">

        <!-- ComboBox z wyborem symbolu do wstawienia -->
        <ComboBox SelectedIndex="0" Width="100" x:Name="Symbol" x:FieldModifier="public">
            <!-- Symboli do wyboru -->
            <ComboBoxItem>💕</ComboBoxItem>
            <ComboBoxItem>👾</ComboBoxItem>
            <ComboBoxItem>⚾</ComboBoxItem>
            <ComboBoxItem>📚</ComboBoxItem>
        </ComboBox>

        <!-- Przycisk do zatwierdzenia wyboru symbolu i jego wstawienia -->
        <Button Click="Accept">Wstaw</Button>

    </StackPanel>
</Window>
